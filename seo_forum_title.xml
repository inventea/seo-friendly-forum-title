<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.0.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		
		<title lang="en">SEO Friendly Forum Title</title>
		
		<description lang="en">Modyfikacja generuje przyjaźniejszy dla wyszukiwarek tytuł forum, który wyświetlany jest na belce przeglądarki.</description>

		<author-notes lang="en">Brak.</author-notes>
		
		<author-group>
			<author>
				<realname>Jarosław Pustuła</realname>
				<username>medeish</username>
				<homepage>http://inventia.io</homepage>
			</author>
		</author-group>
		
		<mod-version>1.0.0</mod-version>
		
		<installation>
			<level>easy</level>
			<time>350</time>
			<target-version>3.0.2</target-version>
		</installation>

		<history>
			<entry>
				<date>2008-08-10</date>
				<rev-version>1.0.0</rev-version>
				<changelog lang="en">
					<change>pierwsze wydanie</change>
				</changelog>
			</entry>
		</history>
	</header>
	
	<action-group>
		<open src="index.php">
			<edit>
				<find>page_header($user->lang['INDEX']);</find>
				<action type="replace-with">page_header();</action>
			</edit>
		</open>
		<open src="viewforum.php">
			<edit>
				<find>page_header($user->lang['VIEW_FORUM'] . ' - ' . $forum_data['forum_name']);</find>
				<action type="replace-with">page_header($forum_data['forum_name']);</action>
			</edit>
		</open>
		<open src="viewtopic.php">
			<edit>
				<find>page_header($user->lang['VIEW_TOPIC'] .' - ' . $topic_data['topic_title']);</find>
				<action type="replace-with"><![CDATA[page_header($topic_data['topic_title'] . ' &bull; '  . $topic_data['forum_name']);]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/template/overall_header.html">
			<edit>
				<comment lang="en"><![CDATA[Jeśli nie chcesz, żeby na belce przeglądarki wyświetlał się opis forum, po zamienieniu tej linii usuń w niej: &bull; {SITE_DESCRIPTION}]]></comment>
				<find><![CDATA[<title>{SITENAME} &bull; <!-- IF S_IN_MCP -->{L_MCP} &bull; <!-- ELSEIF S_IN_UCP -->{L_UCP} &bull; <!-- ENDIF -->{PAGE_TITLE}</title>]]></find>
				<action type="replace-with"><![CDATA[<title>{PAGE_TITLE}<!-- IF PAGE_TITLE --> &bull; <!-- ENDIF --><!-- IF S_IN_MCP -->{L_MCP} &bull; <!-- ELSEIF S_IN_UCP -->{L_UCP} &bull; <!-- ENDIF -->{SITENAME} &bull; {SITE_DESCRIPTION}</title>]]></action>
			</edit>
		</open>
		<open src="styles/subsilver2/template/overall_header.html">
			<edit>
				<comment lang="en"><![CDATA[Jeśli nie chcesz, żeby na belce przeglądarki wyświetlał się opis forum, po zamienieniu tej linii usuń w niej: &bull; {SITE_DESCRIPTION}]]></comment>
				<find><![CDATA[<title>{SITENAME} &bull; <!-- IF S_IN_MCP -->{L_MCP} &bull; <!-- ELSEIF S_IN_UCP -->{L_UCP} &bull; <!-- ENDIF -->{PAGE_TITLE}</title>]]></find>
				<action type="replace-with"><![CDATA[<title>{PAGE_TITLE}<!-- IF PAGE_TITLE --> &bull; <!-- ENDIF --><!-- IF S_IN_MCP -->{L_MCP} &bull; <!-- ELSEIF S_IN_UCP -->{L_UCP} &bull; <!-- ENDIF -->{SITENAME} &bull; {SITE_DESCRIPTION}</title>]]></action>
			</edit>
		</open>
	</action-group>
</mod>
